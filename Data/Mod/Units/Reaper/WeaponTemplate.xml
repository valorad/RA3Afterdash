				Radius="15.0"
				DamageType="CRUSH"
				DeathType="CRUSHED">
				<SpecialObjectFilter
					Rule="ANY"
					Include="VEHICLE">
					<ExcludeThing>AlliedAntiNavyShipTech1</ExcludeThing>
					<ExcludeThing>JapanAntiVehicleVehicleTech3</ExcludeThing>
					<ExcludeThing>SovietAntiVehicleVehicleTech3</ExcludeThing>

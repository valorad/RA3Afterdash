			<Filter
				Rule="ANY"
				Include="INFANTRY AIRCRAFT VEHICLE HUGE_VEHICLE" />
		</ScatterRadiusVsType>
	</WeaponTemplate>

	<WeaponTemplate
		id="SovietHeavyWalkerRocketWeaponWarhead"
		RadiusDamageAffects="ALLIES ENEMIES NEUTRALS"
		Flags="ATTACK_NEEDS_LINE_OF_SIGHT NOT_ATTRACTED_BY_MAGNETS"
